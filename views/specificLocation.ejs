            </ul>
        </section>
        <form action="<%= location._id %>/setLocation " method="get" id="setLocation">
        <button 
            class="voterButton"
            type="submit">
            Set as next Investigation
        </button>
    </form>

    <a href="/locations"> Back to Locations </a>
